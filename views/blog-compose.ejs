<%- include("partials/blog-header"); -%>

<h1><%= isEditing ? "Edit" : "Compose" %></h1>

<form
  class=""
  action="<%= isEditing ? '/blog/' + post._id + '/update' : '/blog/compose' %>"
  method="post"
>
  <div class="form-group">
    <label>Title</label>
    <input
      class="form-control"
      type="text"
      name="postTitle"
      value="<%= post ? post.title : '' %>"
    />

    <label>Post</label>
    <textarea class="form-control" name="postBody" cols="30" rows="5">
<%= post ? post.content : '' %></textarea
    >
  </div>
  <button class="btn btn-primary" type="submit" name="" value="">
    <%= isEditing ? "Update" : "Publish" %>
  </button>
  <button
    class="btn btn-secondary"
    type="button"
    onclick="location.href='/blog/home'"
  >
    Cancel
  </button>
</form>

<%- include("partials/blog-footer"); -%>
