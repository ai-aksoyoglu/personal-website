<%- include("header"); -%>

<body>
  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function (item) { %>
    <form action="/todolist/updated" method="post">
      <div class="item">
        <input
          type="checkbox"
          name="checkbox"
          value="<%= item._id%>"
          onChange="this.form.submit()"
        />
        <p><%=item.name%></p>
      </div>
    </form>
    <%})%>

    <form class="item" action="/todolist" method="post">
      <input
        type="text"
        name="newItem"
        placeholder="anything else?"
        required
        autofocus
      />
      <button class="" type="submit" name="list" value="<%=listValue%>">
        +
      </button>
    </form>
  </div>

  <%- include("footer"); -%>
</body>
