<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/header') %>
    <main class="container">
      <div class="container justify-content-center">
        <h1>Journal to your ðŸ’™'s desire</h1>
        <p class="text-justify">
          Start writing daily or weekly or monthly... You will never loose this
          journal, nor can it be stolen from you. Your posts are saved on
          mongoDB and you can read, edit or delete them any time you want.
          Enjoy!
        </p>
        <br />
        <div class="mb-5">
          <button
            class="btn btn-outline-light btn-lg"
            type="button"
            onclick="location.href='/blog/compose'"
          >
            <i class="fas fa-feather"></i> Compose something today
          </button>
        </div>
        <% posts.forEach(function(post) { %>
        <h2 class="text-justify"><%=post.title%></h2>
        <p class="text-justify">
          <%=post.content.substring(0,100)%> ...
          <button
            class="btn btn-link"
            type="button"
            onclick="location.href='/blog/<%=post._id%>'"
          >
            <i class="fas fa-book-open"></i>
            Read more
          </button>
        </p>
        <div class="mb-5">
          <button
            class="btn btn-light"
            type="button"
            onclick="location.href='/blog/<%=post._id%>/edit'"
          >
            Edit
          </button>
          <form
            action="/blog/<%= post._id %>/delete"
            method="POST"
            style="display: inline"
            onsubmit="return confirm('Are you sure you want to delete this post?');"
          >
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </div>
        <hr />

        <% }); %>
      </div>
      <div class="container justify-content-center"></div>
    </main>
    <%- include('partials/footer') %> <%- include('partials/scripts') %>
  </body>
</html>
