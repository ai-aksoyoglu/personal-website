<%- include("partials/blog-header"); -%>

<h1>Home</h1>
<p><%=homeContent%></p>

<% posts.forEach(function(post) { %>
  <h1><%=post.title%></h1>
  <p>
    <%=post.content.substring(0,100)%> ...
    <a href="/blog/<%=post._id%>">Read more</a>
    <a href="/blog/<%=post._id%>/edit">Edit</a>
    <form action="/blog/<%=post._id%>/delete" method="POST" style="display:inline;">
      <button type="submit">Delete</button>
    </form>
  </p>
<% }); %>

<%- include("partials/blog-footer"); -%>